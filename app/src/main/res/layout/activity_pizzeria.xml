<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#BDBDBD"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.notnull.nsaxena.viewbhopal.pizzeria">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/pizzeria"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:scaleType="center"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Address &amp; contact:-"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:textStyle="bold"
            android:id="@+id/head1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head1"
            android:text="177, Zone 2, Maharana Pratap Nagar, Bhopal.\nPhone No.: +917554255333"
            android:id="@+id/drop1"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cuisines:-"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:textStyle="bold"
            android:id="@+id/head2"
            android:layout_below="@id/drop1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head2"
            android:text="&#8226;Chinese\n&#8226;Italian\n&#8226;Fast Food"
            android:id="@+id/drop2"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Opening Hours:-"
            android:paddingTop="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/head3"
            android:layout_below="@id/drop1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head3"
            android:text="Mon-Sun (11:00AM to 11:00PM)"
            android:id="@+id/drop3"
            android:textSize="24sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Highlights:-"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:id="@+id/head4"
            android:layout_below="@id/drop3"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head4"
            android:text="&#8226;Lunch\n&#8226;Dinner\n&#8226;Home Delivery\n&#8226;Takeaway Available\n&#8226;Seating Available\n&#8226;Vegetarian Only\n&#8226;Bar Not Available\n&#8226;Air Conditioned\n&#8226;Buffet\n"

            android:id="@+id/drop4"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cost:-"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:textStyle="bold"
            android:id="@+id/head5"
            android:layout_below="@id/drop4"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head5"
            android:text="â‚¹500 for two people (approx.)\nCash and Cards accepted."
            android:id="@+id/drop5"
            android:textSize="24sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/head6"
            android:layout_below="@id/head5"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dp1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dp2"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dp3"/>
            </LinearLayout>
        </HorizontalScrollView>




    </LinearLayout>
</ScrollView>
</RelativeLayout>

